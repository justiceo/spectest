{
  "name": "spectest",
  "version": "2.0.0",
  "description": "Declarative API testing that is fast and simple",
  "main": "dist/cli.js",
  "scripts": {
    "build": "npx -y esbuild src/cli.ts src/helpers.ts --bundle --minify --platform=node --target=node20 --format=esm --packages=external --outdir=dist --banner:js=\"#!/usr/bin/env node\"",
    "test": "npm run build && node dist/cli.js --base-url=https://jsonplaceholder.typicode.com"
  },
  "keywords": [
    "api",
    "tests",
    "testing",
    "declarative",
    "http-testing",
    "api-testing",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justiceo/spectest.git"
  },
  "homepage": "https://spectest.dev",
  "bugs": {
    "url": "https://github.com/justiceo/spectest/issues"
  },
  "author": "Justice Ogbonna <dev@justiceo.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "bin": {
    "spectest": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js",
    "./helpers": "./dist/helpers.js"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "typescript": "^5.5.3"
  }
}
