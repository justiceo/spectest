{
  "name": "spectest",
  "version": "1.0.1",
  "description": "Fetch-inspired declarative API testing framework",
  "main": "dist/cli.js",
  "scripts": {
    "build": "npx esbuild src/cli.ts src/helpers.ts src/generate-openapi.ts --bundle --platform=node --target=node20 --format=esm --packages=external --outdir=dist",
    "test": "npm run build && node dist/cli.js --base-url=https://jsonplaceholder.typicode.com",
    "generate:openapi": "npm run build && node dist/generate-openapi.js"
  },
  "keywords": [
    "api",
    "testing",
    "declarative",
    "http-testing",
    "api-testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justiceo/spectest.git"
  },
  "bugs": {
    "url": "https://github.com/justiceo/spectest/issues"
  },
  "author": "Justice Ogbonna",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "axios": "^1.10.0"
  },
  "bin": {
    "spectest": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js",
    "./helpers": "./dist/helpers.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "typescript": "^5.4.5"
  }
}
